{
	"type": "object",
	"required": [
		"name",
		"version",
		"pymodaq-plugins"
	],
	"properties": {
		"name": { "enum": ["pymodaq-pluginList"] },
		"version": {
			"type": "string",
			"pattern": "^\\d+(\\.\\d+){,3}$"
		},
		"pymodaq-plugins": {
			"type": "array",
			"items": { "$ref": "#/definitions/plugin" }
		}
	},
	"definitions": {
		"plugin": {
			"type": "object",
			"required": [
				"plugin-name",
				"display-name",
				"version",
				"id",
				"repository",
				"description",
				"instruments",
				"author",
				"contributors",
				"homepage"
			],
			"properties": {
				"plugin-name": {
					"type": "string",
					"minLength": 1
				},
				"display-name": {
					"type": "string",
					"minLength": 1
				},
				"version": {
					"type": "string",
					"pattern": "^\\d+(\\.\\d+){,3}$"
				},
				"id": {
					"type": "string",
					"pattern": "^(?i)^[A-Z0-9]{64}$"
				},
				"repository": {
					"format": "uri"
				},
				"description": {
					"type": "string",
					"minLength": 1
				},
				"instruments": {
					"type": "array"
				},
				"author": {
					"type": "string"
				},
				"contributors": {
					"type": "array"
				},
				"homepage": {
					"oneOf": [
						{"type": "string", "maxLength": 0},
						{"format": "uri"}
					]
				}
			}
		}
	}
}